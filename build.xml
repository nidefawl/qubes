<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project basedir="." default="build_game" name="Game">
    <property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.7"/>
    <property name="source" value="1.7"/>
	<property name="targetfile" value="U:\game\server.jar" />
    <path id="CraftlandLauncherLoader.classpath">
        <pathelement location="bin"/>
        <pathelement location="lib/jline/jline-2.13.jar"/>
        <pathelement location="lib/lwjgl_dbg/lwjgl.jar"/>
        <pathelement location="lib/guava/guava-18.0.jar"/>
        <pathelement location="lib/snakeyaml/snakeyaml-1.16.jar"/>
    </path>
	<property name="launch4j.dir" location="C:\Program Files (x86)\Launch4j" />
	<taskdef name="launch4j"
	    classname="net.sf.launch4j.ant.Launch4jTask"
	    classpath="${launch4j.dir}/launch4j.jar
	        :${launch4j.dir}/lib/xstream.jar" />
	
    <target name="clean">
        <delete dir="compile"/>
        <delete dir="compileserver"/>
    </target>
    <target name="build_game_init">
	    <delete dir="compile/game" failonerror="no"/>
        <mkdir dir="compile/game"/>
        <mkdir dir="compile/game/res"/>
        <copy includeemptydirs="false" todir="compile/game">
            <fileset dir="src">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
        <copy includeemptydirs="false" todir="compile/game/res">
            <fileset dir="res">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="build_game_compile">
        <javac debug="true" debuglevel="${debuglevel}" destdir="compile/game" source="${source}" target="${target}">
            <src path="src"/>
            <classpath refid="CraftlandLauncherLoader.classpath"/>
        </javac>
    </target>
    <target name="build_game_jar">
	    <delete file="..\game.jar" failonerror="no"/>
		<jar destfile="..\game.jar" basedir="compile/game" includes="**/*" compress="false">
	        <manifest>
            	<attribute name="Main-Class" value="nidefawl.qubes.BootClient"/>
	        </manifest>
			<fileset file="..\game_deps.jar" />
		</jar>
    </target>
    <target name="build_game_exe">
    	<launch4j configFile="../launch4j_game.xml" />

    </target>
    	
    <target name="build_game">
        <echo message="${ant.project.name}: ${ant.file}"/>
    	<antcall target="build_game_init" />
    	<antcall target="build_game_compile" />
    	<antcall target="build_game_jar" />
    </target>
	
	<target name="build_deps">
        <echo message="${ant.project.name}: ${ant.file}"/>
	    <delete file="..\game_deps.jar" failonerror="no"/>
	    <delete dir="compile/deps" failonerror="no"/>
        <mkdir dir="compile/deps"/>
		<copy file="lib/jline/jline-2.13.jar" tofile="compile/deps/jline.jar"/>
		<copy file="lib/lwjgl_dbg/lwjgl.jar" tofile="compile/deps/lwjgl.jar"/>
		<copy file="lib/guava/guava-18.0.jar" tofile="compile/deps/guava.jar"/>
		<copy file="lib/snakeyaml/snakeyaml-1.16.jar" tofile="compile/deps/snakeyaml.jar"/>
        <mkdir dir="compile/deps/natives"/>
    	<copy includeemptydirs="false" todir="compile/deps/natives">
    		<fileset dir="C:\lwjgl3\libs">
    			<include name="*.*"/>
    		</fileset>
    	</copy>
    	<delete dir="compile/deps/META-INF" />
		<jar destfile="..\game_deps.jar" compress="false">
	        <fileset dir="compile/deps" includes="**/*" /> 
		</jar>
	</target>

    <target name="initserver">
        <mkdir dir="compileserver"/>
        <copy includeemptydirs="false" todir="compileserver">
            <fileset dir="src">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target depends="initserver" name="buildserver">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="compileserver" source="${source}" target="${target}">
            <src path="src"/>
            <classpath refid="CraftlandLauncherLoader.classpath"/>
        </javac>
    </target>
	<target name="jarserver" depends="buildserver">
		<delete file="..\server.jar"/>
		<jar destfile="..\server.jar" basedir="compileserver" includes="**/*">
	        <manifest>
	            <attribute name="Main-Class" value="nidefawl.qubes.BootServer"/>
	        </manifest>
		</jar>
        <delete file="${targetfile}"/>
        <copy file="..\server.jar" tofile="${targetfile}"/>
    </target>
</project>
